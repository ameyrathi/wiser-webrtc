<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data></data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MingleActivity"
    android:orientation="vertical">
    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingVertical="@dimen/container_vertical_padding">
            <!-- Close Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnClose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="3dp"
                app:contentPadding="10dp"
                app:cardBackgroundColor="@color/dark_grey"
                android:layout_marginLeft="@dimen/container_horizontal_padding"
                android:layout_marginRight="3dp"
                android:layout_marginVertical="3dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/close"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:paddingHorizontal="@dimen/container_horizontal_padding"
                android:gravity="bottom">
                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mingle"
                    android:textSize="@dimen/font_size_header"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="3dp"/>
                <TextView
                    android:id="@+id/lblParticipantsCounter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2/5 people"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    android:textSize="14dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/lblRoomId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/container_horizontal_padding"
                android:layout_marginLeft="3dp"
                android:layout_marginVertical="5dp"
                android:textStyle="bold"
                android:text="Room Id: "/>
            <!-- Participants -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvParticipants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:clipToPadding="false"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ctnVideoCall"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/border_rounded"
                    android:padding="10dp"
                    android:layout_marginLeft="@dimen/container_horizontal_padding"
                    android:gravity="center"
                    android:layout_marginTop="7dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/video_camera"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Video Call"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ctnMicControl"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/border_rounded"
                    android:padding="10dp"
                    android:layout_marginHorizontal="@dimen/container_horizontal_padding"
                    android:gravity="center"
                    android:layout_marginTop="7dp">
                    <ImageView
                        android:id="@+id/imgMicControl"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/mic_on"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/lblMicControl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mic on"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/shadow" />
    <!-- Body -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play Games"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="@dimen/container_horizontal_padding"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvGames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:clipToPadding="false"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
</layout>